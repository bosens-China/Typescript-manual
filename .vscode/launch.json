{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${file}",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug VuePress",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
          "run-script",
          "debug"
      ],
      "port": 9229
  },
  {
    "name": "ts node server",
    "type": "node",
    "request": "launch",
    "runtimeArgs": [
      "-r",
      "ts-node/register"
    ],
    "sourceMaps": true,
    "args": [
      "-r",
      "tsconfig-paths/register",
      "${relativeFile}"
    ],
    "env": {
      "TS_NODE_FILES": "true",
      "TS_NODE_PROJECT": "${workspaceRoot}/tsconfig.json"
    },
    "cwd": "${workspaceRoot}",
    "protocol": "inspector"
  }]
}